<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:id="@+id/back_img"
        android:src="@drawable/arrow_black"/>

    <Button
        android:id="@+id/btn_back"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_tv"
        android:layout_marginTop="20dp"
        android:text="Profile"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@id/title_tv"
        android:layout_marginTop="20dp"
        android:background="@color/white">


        <View
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/border1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:text="Mobile"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/border1"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/tv_name"
            android:text="Farhan Fazal"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <View
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="160dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/border2"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/tv_name"
            android:text="Farhanfazal001@gmail.com"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <View
            android:id="@+id/border3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_email"
            android:layout_marginStart="160dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorGray" />


        <TextView
            android:id="@+id/tv_user_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/border3"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/tv_name"
            android:text="+97339835485"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGray" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_password_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Password Settings"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_password_setting"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"
            android:layout_alignParentTop="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/btn_change_pass"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/colorlightGray"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textSize="17dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/editprofile_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_blue_bg"
        android:elevation="2dp"
        android:outlineAmbientShadowColor="@color/blue"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />



</RelativeLayout>
